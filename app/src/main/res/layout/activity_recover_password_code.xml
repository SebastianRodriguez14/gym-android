<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/StartApplicationTheme"
    tools:context=".activities.RecoverPasswordCodeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/login_bg"
        android:scaleType="centerCrop"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="horizontal"
            android:layout_weight="0.4"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/michroma_regular"
                android:text="@string/recover_password_mail_title"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:layout_marginHorizontal="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recover_password_code_info"
                android:textColor="@color/white_paragraph"
                android:fontFamily="@font/poppins_regular"
                android:layout_weight="0.1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/code1"
                        android:layout_width="45dp"
                        android:layout_height="61dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/shape_input_login"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:paddingLeft="11dp"
                        android:paddingTop="4dp"
                        android:textColor="@color/black_paragraph"
                        android:textColorHighlight="@color/gray_clear"
                        android:textColorHint="@color/gray_dark"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/code2"
                        android:layout_width="45dp"
                        android:layout_height="61dp"
                        android:textColor="@color/black_paragraph"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHighlight="@color/gray_clear"
                        android:background="@drawable/shape_input_login"
                        android:paddingLeft="10dp"
                        android:layout_marginHorizontal="11dp"
                        android:inputType="textEmailAddress"
                        android:paddingTop="4dp"
                        android:textColorHint="@color/gray_dark"
                        android:lines="1"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/code3"
                        android:layout_width="45dp"
                        android:layout_height="61dp"
                        android:textColor="@color/black_paragraph"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHighlight="@color/gray_clear"
                        android:background="@drawable/shape_input_login"
                        android:paddingLeft="10dp"
                        android:layout_marginHorizontal="11dp"
                        android:inputType="textEmailAddress"
                        android:paddingTop="4dp"
                        android:textColorHint="@color/gray_dark"
                        android:lines="1"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/code4"
                        android:layout_width="45dp"
                        android:layout_height="61dp"
                        android:textColor="@color/black_paragraph"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHighlight="@color/gray_clear"
                        android:background="@drawable/shape_input_login"
                        android:paddingLeft="10dp"
                        android:layout_marginHorizontal="11dp"
                        android:inputType="textEmailAddress"
                        android:paddingTop="4dp"
                        android:textColorHint="@color/gray_dark"
                        android:lines="1"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/code5"
                        android:layout_width="45dp"
                        android:layout_height="61dp"
                        android:textColor="@color/black_paragraph"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHighlight="@color/gray_clear"
                        android:background="@drawable/shape_input_login"
                        android:paddingLeft="10dp"
                        android:layout_marginHorizontal="11dp"
                        android:inputType="textEmailAddress"
                        android:paddingTop="4dp"
                        android:textColorHint="@color/gray_dark"
                        android:lines="1"
                        android:textSize="16sp"/>
                </LinearLayout>
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/error_message_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/recover_password_code_error_message"
                    android:textColor="@color/red"
                    android:fontFamily="@font/poppins_regular"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="vertical"
            android:layout_marginHorizontal="50dp"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/recoverpassword_code_enter"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="@string/recover_password_email_enter"
                android:layout_gravity="bottom|center"
                android:textColor="@color/black"
                android:fontFamily="@font/michroma_regular"
                android:textSize="22dp"
                android:paddingHorizontal="50dp"
                android:paddingBottom="10dp"
                android:textAlignment="center"
                android:background="@drawable/shape_start_page_button"
                />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>