<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?colorPrimaryVariant"
    android:layout_height="match_parent"
    tools:context=".fragments.ExerciseFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            >
            <VideoView
                android:id="@+id/video_exercise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="30dp"
                android:paddingHorizontal="30dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="#a1aaaaaa"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="0dp"
                    >
                    <ImageView
                        android:id="@+id/exercise_list_body_part_back"
                        android:layout_gravity="end|center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_arrow_back_ios_24"
                        app:tint="@color/black" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            >
            <TextView
                android:id="@+id/text_name_exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ExtensiÃ³n de triceps con mancuerna"
                android:fontFamily="@font/michroma"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="start"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/text_sets_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Series: 5"
                    android:fontFamily="@font/poppins"
                    />

                <TextView
                    android:id="@+id/text_amount_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiempo: 20seg"
                    android:fontFamily="@font/poppins"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/text_break_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descanso: 20seg"
                android:fontFamily="@font/poppins"
                />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linearBreak"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descanso"
                        android:textAlignment="center"
                        android:fontFamily="@font/michroma"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="tienes"
                        android:textAlignment="center"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="5dp"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:background="@drawable/stroke_circle"
                            />

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:padding="10dp"
                            >
                            <TextView
                                android:id="@+id/text_cronodescanso"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/stroke_circle_coarse_break"
                                android:text="00:00"
                                android:textColor="@color/white"
                                android:fontFamily="@font/michroma"
                                android:textSize="30dp"
                                android:paddingBottom="10dp"
                                />
                        </LinearLayout>

                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/btn_break"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_button_completado"
                        android:backgroundTint="@color/red"
                        >
                        <TextView
                            android:id="@+id/text_btn_break"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inicia Descanso"
                            android:paddingBottom="6dp"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:fontFamily="@font/michroma"
                            android:layout_gravity="center"
                            >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearTime"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="5dp"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:background="@drawable/stroke_circle"
                            />

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:padding="10dp"
                            >
                        <TextView
                            android:id="@+id/text_cronometer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/stroke_circle_coarse"
                            android:text="00:00"
                            android:textColor="@color/white"
                            android:fontFamily="@font/michroma"
                            android:textSize="30dp"
                            android:paddingBottom="10dp"
                            />
                        </LinearLayout>
                    </RelativeLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingHorizontal="30dp"
                            android:paddingVertical="5dp"
                            >
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:id="@+id/text_setsDoing_exercise"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/michroma"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="35dp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Serie"
                                    android:fontFamily="@font/poppins"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:gravity="center"
                            />
                            </FrameLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearRep"
                    android:visibility="invisible"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:gravity="center|bottom"
                    android:layout_gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingHorizontal="45dp"
                            android:paddingVertical="15dp"
                            >
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:id="@+id/text_sets_done_rep"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/michroma"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="35dp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Serie"
                                    android:fontFamily="@font/poppins"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:gravity="center"
                                    />
                            </FrameLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/text_amount_rep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 repeticiones"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/black"
                        />
                    <LinearLayout
                        android:id="@+id/text_btn_exercise_rep"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="50dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_button_completado"
                        android:backgroundTint="@color/red"
                        >
                        <TextView
                            android:id="@+id/btn_name_exercise_rep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Siguiente Serie"
                            android:paddingBottom="6dp"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:fontFamily="@font/michroma"
                            android:layout_gravity="center"
                            >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>


            </FrameLayout>
            <LinearLayout
                android:id="@+id/btn_exercise"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/shape_button_completado"
                >
                <TextView
                    android:id="@+id/text_btn_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iniciar"
                    android:paddingBottom="6dp"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:fontFamily="@font/michroma"
                    android:layout_gravity="center"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>