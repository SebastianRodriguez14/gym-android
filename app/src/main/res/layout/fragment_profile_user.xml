<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?colorPrimaryVariant"
    android:orientation="vertical"
    tools:context=".fragments.ProfileUserFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="?colorOnPrimary"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>
        </LinearLayout>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardCornerRadius="1000dp"
            app:cardElevation="5dp"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/photo_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_user_image_default"
                android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/profile_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cargando..."
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="?colorOnSecondary"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="120dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_user_title"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:textColor="?colorOnSecondary"
            android:fontFamily="@font/michroma_regular"
            android:layout_marginBottom="130dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_user_edit_link"
            android:textSize="18sp"
            android:textColor="?colorOnSecondary"
            android:layout_gravity="center_vertical|right"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="120dp"/>


    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="?colorPrimaryVariant"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/profile_user_active_membership"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/profile_user_membership" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/profile_user_active_membership"
                android:textColor="@color/green_variant"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:layout_marginVertical="15sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/profile_user_phone_title"
                    android:textColor="?colorTertiary"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/profile_user_input_phone"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:enabled="true"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="10dp"
                    android:paddingHorizontal="3dp"
                    android:textSize="18sp"
                    android:text="cargando..."
                    android:textColor="?colorOnSecondary"
                    android:background="@drawable/shape_profile_user_input"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/profile_user_time_membership"
                    android:textColor="?colorTertiary"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/profile_user_input_membership"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:enabled="false"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="10dp"
                    android:paddingHorizontal="3dp"
                    android:text="cargando..."
                    android:textSize="18sp"
                    android:textColor="?colorOnSecondary"
                    android:background="@drawable/shape_profile_user_input"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/profile_user_notification"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="?colorOnSecondary"
                    android:gravity="center"/>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/profile_user_switch_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:enabled="false"
                    android:theme="@style/ProfileUserPage"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_gravity="right"/>
            </FrameLayout>
            <TextView
                android:id="@+id/profile_user_logout_link"
                android:layout_marginHorizontal="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_user_log_out"
                android:textColor="@color/red"
                android:fontFamily="@font/poppins_regular"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>