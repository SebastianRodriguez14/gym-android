<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="190dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="25dp"
    app:cardElevation="0dp"
    android:backgroundTint="?colorSecondaryVariant">
    
    <FrameLayout
        android:id="@+id/layout_item_routine"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_routine_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/brazo3" />

            <TextView
                android:id="@+id/item_routine_name"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="7dp"
                tools:text="Dos superseries en las que vamos a combinar el trabajo de bíceps y tríceps"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:layout_gravity="left|bottom"
                android:fontFamily="@font/poppins"
                />

    </FrameLayout>


</com.google.android.material.card.MaterialCardView>