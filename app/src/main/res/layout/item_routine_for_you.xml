<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="230dp"
    android:layout_height="120dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="10dp"
    app:cardElevation="0dp"
    android:backgroundTint="?colorSecondaryVariant">

    <FrameLayout
        android:id="@+id/layout_item_routine_fy"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_routine_image_fy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/brazo3"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/item_routine_name_fy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            tools:text="Dos superseries en las que vamos a combinar el trabajo de bíceps y tríceps"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:background="@drawable/gradient_routine_for_you"
            android:layout_gravity="center|bottom"
            android:fontFamily="@font/poppins"
            />

    </FrameLayout>


</com.google.android.material.card.MaterialCardView>