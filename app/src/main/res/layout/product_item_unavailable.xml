<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="170dp"
    app:cardCornerRadius="13dp"
    app:cardElevation="4dp"
    android:layout_marginVertical="10dp"
    android:theme="@style/ProductsPage"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#34E10A0A"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:src="@drawable/creabolic"
                android:tint="#34E10A0A"
                tools:ignore="UseAppTint" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:background="@drawable/discount_bg"
        android:fontFamily="@font/poppins"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        android:paddingHorizontal="4dp"
        android:textSize="10dp"
        android:text="Sale 40%"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/poppins"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:paddingHorizontal="4dp"
        android:textSize="13dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Creabolic (creatina) de 500grs"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:gravity="end"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:paddingHorizontal="4dp"
            android:textSize="10dp"
            android:text="S/. 90.00"
            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>