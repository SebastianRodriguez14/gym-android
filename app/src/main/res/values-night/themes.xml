<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gymandroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_dark</item>
        <item name="colorPrimaryVariant">@color/background_dark</item> <!-- background and statusBarColor -->
        <item name="colorOnPrimary">@color/semi_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/semi_black</item> <!-- Without use -->
        <item name="colorSecondaryVariant">@color/semi_black</item> <!-- For background in some items -->
        <item name="colorOnSecondary">@color/white</item> <!-- For texts in titles and subtitles -->
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/white_paragraph</item> <!-- For texts in paragraphs -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="InfoPageTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red_dark</item> <!-- background in card -->
        <item name="colorPrimaryVariant">@color/red_dark</item> <!-- background in item selected-->
        <item name="colorOnPrimary">@color/semi_black</item> <!-- For background in item -->

        <item name="colorSecondary">@color/red</item> <!-- For second color in monthly payment-->
        <item name="colorOnSecondary">@color/gray_dark</item> <!-- For second color in monthly payment-->

        <item name="colorTertiary">@color/white_paragraph</item> <!-- For text in items -->

    </style>

    <style name="ProductsPageTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorSecondary">@color/green_dark</item> <!-- For color in circle of available and switch -->

        <item name="colorTertiary">@color/gray_clear_variant</item> <!-- For color in search icon -->

    </style>

    <style name="ProfileUserPage" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorSecondary">@color/green</item> <!-- For switch -->

    </style>

    <!-- For startActivity, loginActivity and registerActivity -->
    <style name="StartApplicationTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/background_dark</item> <!-- For statusBar color -->

        <item name="colorSecondary">@color/black_paragraph</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

</resources>